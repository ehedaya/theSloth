{
  "name":           "theSloth",
  "version":        "0.0.1",
  "description":    "Extension for http://plug.dj/thePhish",
  "browser_action" : {
    "default_icon": "icon.png",
  	"default_title" : "thePhish",
  	"default_popup" : "popup.html"
  },
  "content_scripts": [
    {
          "matches": ["*://plug.dj/*"],
      	  "js": ["scripts/jquery.js", "scripts/jquery-2.0.3.min.map", "scripts/injector.js"],
          "run_at": "document_end"
    }],
  "manifest_version": 2,
   "web_accessible_resources": [
        "scripts/content.js",
        "scripts/jquery.js"
  ]
}
